<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Green Button -->
    <selector xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/green_button_bg">
        <item android:state_enabled="false">
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <solid android:color="#80009966" />
            </shape>
        </item>
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <solid android:color="#26C69D" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <solid android:color="#00BC8C" />
            </shape>
        </item>
    </selector>

